@{
    ViewBag.Title = "Login";
    Layout = null;
}
<h2>Login</h2>

@using (Html.BeginForm())
{
    <p>Usuario: @Html.TextBox("username")</p>
    <p>Contraseña: @Html.Password("password")</p>
    <input type="submit" value="Ingresar" />
}

@if (ViewBag.Error != null)
{
    <p style="color:red">@ViewBag.Error</p>
}
